  },
  "dependencies": {
    "avataria": "^0.4.1",
    "colors": "^1.1.2",
    "commander": "^2.13.0",
    "genetica": "^0.5.3",
    "node-zip": "^1.1.1",
    "nomina": "^0.4.3",
    "opendnd-core": "^0.1.1",
    "pdfkit": "^0.8.3",
